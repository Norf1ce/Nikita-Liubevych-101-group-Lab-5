// Любевич Нікіта 101 група (19 у списку + 16 => 35, тобто 5 задача)
#include <stdio.h>

int main() {
    int n;
    double A[20][20], B[20];

    printf("Введіть n (<= 20): ");
    scanf("%d", &n);

    printf("Введіть матрицю A (%d x %d):\n", n, n);
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%lf", &A[i][j]);

    // Обчислення середніх арифметичних кожного рядка
    for (int i = 0; i < n; i++) {
        double sum = 0;
        for (int j = 0; j < n; j++)
            sum += A[i][j];
        B[i] = sum / n;   // середнє арифметичне
    }

    printf("Вектор B (середні арифметичні рядків):\n");
    for (int i = 0; i < n; i++)
        printf("B[%d] = %.2lf\n", i, B[i]);

    return 0;
}
